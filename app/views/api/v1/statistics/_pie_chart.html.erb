<canvas id="pieChart" width="400" height="400"></canvas>

<script>
  var ctx = document.getElementById('pieChart').getContext('2d');
  var labels = <%=raw @labels %>
  var values = <%=raw @values %>
  ctx.height = 600;
  var data = {
    labels: labels,
    datasets: [
      {
        data: values,
        backgroundColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)',
          'rgba(255, 159, 64, 1)',
        ],
      }
    ]
  };
  var myPieChart = new Chart(ctx, {
    type: 'pie',
    data: data,
    options: {
      maintainAspectRatio: false,
      responsive: true,
    }
  });
</script>