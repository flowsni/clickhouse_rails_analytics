<canvas id="lineChart" width="400" height="400"></canvas>

<script>
  var ctx = document.getElementById('lineChart').getContext('2d');
  var labels = <%=raw @labels %>
  var values = <%=raw @values %>
  ctx.height = 600;
  var data = {
    labels: labels,
    datasets: [
      {
        data: values,
      }
    ]
  };
  var myPieChart = new Chart(ctx, {
    type: 'line',
    data: data,
    options: {
      maintainAspectRatio: false,
      responsive: true,
      legend: {
        display: false
      },
    }
  });
</script>